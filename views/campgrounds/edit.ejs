<% layout('layouts/boilerplate') %>
    
    <div class="row">
        <div class="col-6 offset-3">

    <h1>Edit campground <%=camp.title%></h1>
    <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST" novalidate class = "validated-form">
        <div class = "mb-3">
            <label class ="form-label" for="title">Title:</label>
            <input class="form-control" type="text" name ='campground[title]' id = 'title' value="<%=camp.title %>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        
        <div class = "mb-3">
            <label class ="form-label" for="location">Location:</label>
            <input class="form-control" type="text" name = 'campground[location]' value="<%=camp.location %>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class = "mb-3">
            <label class ="form-label" for="image">Image URL:</label>
            <input class="form-control" type="text" name = 'campground[image]' value="<%=camp.image %>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class = "mb-3">
            <label class = "form-label" for="price">Campground Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input  name = "campground[price]" type="text" class="form-control" id= "price" placeholder="0.00" aria-label="price-label" aria-describedby="basic-addon1" value="<%=camp.price %>">
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class = "mb-3">
            <label class ="form-label" for="description">Description:</label>
            <textarea rows="4" class="form-control" type="text" name = 'campground[description]campground]' required><%=camp.description %></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class="mb-3">
            <button class="btn btn-info">Edit campground</button>
        </div>   
    </form>
    <a href="/campgrounds/<%=camp._id%>"> Back to campground</a>
    </div>
    </div>


